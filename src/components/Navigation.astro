<style>
  .navigation {
    padding: 2em;
  }

  .nav-links {
    display: flex;
    justify-content: space-between;
    overflow: hidden;
    font-size: 0.9em;
  }

  .nav-list {
    list-style: none;
    display: flex;
    gap: 2em;
    overflow: hidden;
    padding: 0;
    margin: auto 0;
  }

  .brand {
    color: white;
    text-decoration: none;
    font-size: 2em;
    font-weight: 600;
    padding-bottom: 0.5rem;
  }

  .nav-link {
    color: #FFFFFF80;
    position: relative;
    padding-bottom: 0.5rem;
  }

  .nav-link:hover,
  .nav-link:focus,
  .nav-link:active {
    color: #FFF;
  }

  .hamburger {
    display: none;
    position: absolute;
    left: 100%;
    cursor: pointer;
  }

  .line {
    display: block;
    width: 20px;
    height: 3px;
    margin-bottom: 5px;
    background-color: #fff;
  }

  @media (max-width: 750px) {
    .hamburger {
      display: block;
    }

    .nav-links {
      flex-direction: column;
    }

    .nav-link {
      margin-bottom: 1em;
    }

    .nav-list {
      display: block;
      padding-left: 0;
      max-height: 0;
      transition: max-height 0.5s ease-in-out;
    }

    .expanded {
      max-height: 500px;
    }

    .navigation {
      padding-left: 0;
    }

    .container {
      margin:0 0.8em;
    }

  }

  @media (min-width: 750px) {
    .nav-link::after {
      content: "";
      position: absolute;
      display: block;
      bottom: 0;
      width: 0;
      height: 4px;
      background-color: #F9BF29;
      transition: width 300ms ease 0s;
    }

    .nav-link:hover::after,
    .nav-link:focus::after,
    .nav-link:active::after {
      width: 100%;
    }
  }
</style>

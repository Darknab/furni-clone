---
const { image, title, price, link } = Astro.props;
---
<div class="card col bg-light position-relative">
  <img src={image.url} class="card-img-top" alt={image.alt}>
  <div class="card-body position-relative">
    <h5 class="card-title text-center">{title}</h5>
    <p class="card-text mb-5 text-center">{price}</p>
    <a href="#" class="btn btn-dark add rounded-circle position-absolute translate-middle start-50">
      <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
        <line x1="9" y1="4.37114e-08" x2="9" y2="18" stroke="white" stroke-width="2"/>
        <line y1="9" x2="18" y2="9" stroke="white" stroke-width="2"/>
      </svg>
    </a>
  </div>
  <a href=`/products/${link}/` class="product-link"></a>
</div>

<style>
  .card {
    border: none;
  }

  .card::before {
    content: "";
    position: absolute;
    height: 0;
    width: 80%;
    left: 10%;
    background-color: #dce5e4;
    bottom: 10%;
    border-radius: 10px;
    transition: all 0.5s ease;
  }

  .add {
    bottom: 10%;
    opacity: 0;
    transition: all 0.5s ease;
  }

  .card-img-top {
    transition: all 0.5s ease;
    z-index: 2;
  }

  .card-title {
    font-size: 1em;
    font-weight: 600;
  }
 
  .card-text {
    color: #2f2f2f;
    font-weight: 700;
    font-size: 1.125em;
  }

  .card:hover {
    & .add {
      bottom: 0;
      opacity: 1;
    }

    & .card-img-top {
      transform: translateY(-10%);
    }

    &::before {
      height: 60%;
    }
  }

  .product-link {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 3;
    height: 100%;
    width: 100%;
    text-decoration: none;
  }


</style>
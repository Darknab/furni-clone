---
const { image, title, price } = Astro.props;
---
<div class="card">
  <img src={image.url.src} class="card-img-top" alt={image.alt}>
  <div class="card-body">
    <h5 class="card-title">{title}</h5>
    <p class="card-text">{price}</p>
    <a href="#" class="btn btn-dark">
      <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
        <line x1="9" y1="4.37114e-08" x2="9" y2="18" stroke="white" stroke-width="2"/>
        <line y1="9" x2="18" y2="9" stroke="white" stroke-width="2"/>
      </svg>
    </a>
  </div>
</div>
---
import couch from '../images/couch.png';

const { headerTitle, headerText } = Astro.props;
---

<div class="hero bg-green ">
  <div class="container row overflow-hidden ">
    <div class="title-description col-lg-5">
      <h1>{headerTitle}</h1>
      <p class="mt-5 mb-4">{headerText}</p>
      <a href="/shop" class="btn rounded-5 shop" >Shop now</a>
      <a href="/services" class="btn rounded-5 explore">Explore</a>
    </div>
    <div class="hero-image col-lg-7">
      <img class="img-fluid couch" src={couch.src} alt="">
    </div>
  </div>
</div>

<style>
  p {
    color: #FFFFFF80;
  }

  a {
    padding: 0.75em 1.875em;
    font-weight: 500;
  }

  .shop {
    background-color: #fabe29;
    color: #2F2F2F;
    margin-bottom: 1rem;
    margin-right: 1rem;
  }

  .shop:hover {
    background-color: #f8b810;
    color: #2F2F2F;
  }

  .explore {
    background-color: transparent;
    border:2px solid #FFFFFF80;
    color: #FFFFFF;
    margin-bottom: 1rem;
  }

  .explore:hover {
    border:2px solid #FFFFFF;
    background-color: transparent;
    color: #FFFFFF;
  }

  .hero-image {
    position: relative;
    z-index: 1;
  }
  
  .hero-image::after {
    content:"";
    background-image: url(../images/dots-light.svg);
    position: absolute;
    height: 217px;
    width: 255px;
    top: 10%;
    left: 70%;
    z-index: -1;
  }

  @media (max-width: 992px) {
    .hero-image::after {
      top: 10%;
      right: 10%;
    }
  }
</style>